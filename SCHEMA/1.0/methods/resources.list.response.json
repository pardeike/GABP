{
  "$id": "https://gabp.dev/schema/1.0/methods/resources.list.response.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "resources/list Response",
  "description": "Response schema for resource list",
  "type": "object",
  "required": ["v", "id", "type", "result"],
  "properties": {
    "v": {
      "const": "gabp/1",
      "description": "Protocol version identifier"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Request identifier this response corresponds to"
    },
    "type": {
      "const": "response",
      "description": "Message type"
    },
    "result": {
      "type": "object",
      "required": ["resources"],
      "properties": {
        "resources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["uri", "name"],
            "properties": {
              "uri": {
                "type": "string",
                "format": "uri",
                "description": "Resource URI"
              },
              "name": {
                "type": "string",
                "description": "Human-readable resource name"
              },
              "description": {
                "type": "string",
                "description": "Description of the resource"
              },
              "mimeType": {
                "type": "string",
                "description": "MIME type hint"
              },
              "size": {
                "type": "integer",
                "minimum": 0,
                "description": "Size in bytes (for file resources)"
              }
            },
            "additionalProperties": false
          },
          "description": "Array of available resource objects"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}