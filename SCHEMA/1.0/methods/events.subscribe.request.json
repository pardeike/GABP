{
  "$id": "https://gabp.dev/schema/1.0/methods/events.subscribe.request.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "events/subscribe Request",
  "description": "Request schema for subscribing to event channels",
  "type": "object",
  "required": ["v", "id", "type", "method", "params"],
  "properties": {
    "v": {
      "const": "gabp/1",
      "description": "Protocol version identifier"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique request identifier"
    },
    "type": {
      "const": "request",
      "description": "Message type"
    },
    "method": {
      "const": "events/subscribe",
      "description": "Method name"
    },
    "params": {
      "type": "object",
      "required": ["channels"],
      "properties": {
        "channels": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "uniqueItems": true,
          "description": "Array of channel names to subscribe to"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}